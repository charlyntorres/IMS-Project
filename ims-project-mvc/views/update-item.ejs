<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles-update.css">
    <title>Update Item</title>
</head>
<body>
    <div class="container">
        <h1>Update Item</h1>
        <h3>Item Information</h3>

        <form id="update-item" action="/ims-project/update-item-form/<%= item._id %>?_method=PATCH" method="POST">
            <label for="item-id">Item ID</label>
            <input class="form-control" id="item-id" name="id" type="text" disabled value="<%= item._id %>"></br>

            <label for="item-name" class="required">Item Name</label>
            <input class="form-control" id="item-name" name="name" type="text" placeholder="Enter item name" required value="<%= item.name %>"></br>

            <label for="item-category" class="required">Item Category</label>
            <input class="form-control" id="item-category" name="category" type="string" placeholder="Enter item category" required value="<%= item.category %>"></br>

            <label for="item-qty">Item Quantity</label>
            <input class="form-control" id="item-quantity" name="quantity" type="string" placeholder="Enter item quantity" value="<%= item.quantity %>"></br>

            <label for="item-price" class="required">Item Price</label>
            <input class="form-control" id="item-price" name="price" type="string" placeholder="Enter item price" required value="<%= item.price %>"></br>

            <label for="item-description">Item Description</label>
            <input class="form-control" id="item-description" name="description" type="string" placeholder="Enter item description" value="<%= item.description %>"></br>

            <input class="submit-btn btn btn-success" type="submit" value="Update">
            <input class="reset-btn btn btn-dark" type="reset">
            <a href="/ims-project" class="cancel-btn btn btn-danger" style="margin-right: 5px;">Cancel</a>
        </form>
    </div>

    <!-- POP UP MESSAGE -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="update-toast" class="toast align-items-center text-bg-warning border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    Item successfully updated!
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
    
    <script>
        const form = document.getElementById('update-item')
        const toastUpdateItem = document.getElementById('update-toast')
    
        form.addEventListener('submit', function(event) {
            event.preventDefault();
    
            const toastBootstrap = bootstrap.Toast.getOrCreateInstance(toastUpdateItem)
            toastBootstrap.show()
    
            setTimeout(() => {
                form.submit()
            }, 1000);
        });
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>